<div class="page-content-wrap">
  <div class="row">
    <div class="col-md-12">

      <!-- TODO add logic for multiple devices -->
        <form class="form-horizontal" action="/device/<%= action %>"  method="post">
          <!-- fix area chart for now -->
          <input type="hidden" name="graph" value="area" />
          <input type="hidden" name="_id" value="<%= device.id %>" />
          
          <div class="form-group">
            <div class="input-group">
              <label for="name" class="control-label"> Device Name </label>
              <input type="text" name="name" id="name" class="form-control" value="<%= device.name %>" />
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <label for="desc" class="control-label">
              <textarea name="desc" class="form-control" id="desc"><%= device.desc %></textarea>
            </div>
          </div>


          <div class="form-group">
            <div class="input-group">
              <!-- TODO: add logic for update value later -->
              <p> Data that the api will receive </p>
              <label for="name" class="control-label"> Device Data </label>
              <input type="text" name="device_data" id="device_data" class="tagsinput" />
            </div>
          </div>

          <button type='submit' class="btn btn-primary"> <%= action %> Device </button>
          
       </form>
    </div>
  </div>
</div>
